<% layout('/layouts/boilerplate.ejs') %>
<style>
    .filters {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      overflow-y: hidden;
      padding: 12px 16px;
      gap: 1.5rem;
      border-bottom: 1px solid #ddd;
      background-color: #ffffff;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
      scroll-behavior: smooth;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
  
    .filters::-webkit-scrollbar {
      height: 8px;
    }
  
    .filters::-webkit-scrollbar-thumb {
      background-color: rgba(0, 0, 0, 0.15);
      border-radius: 10px;
    }
  
    .filter {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-width: 70px;
      flex-shrink: 0;
      opacity: 0.7;
      transition: all 0.3s ease;
      text-align: center;
    }
  
    .filter i {
      font-size: 1.3rem;
      color: #333;
    }
  
    .filter span {
      font-size: 0.82rem;
      margin-top: 6px;
      color: #555;
    }
  
    .filter:hover {
      opacity: 1;
      transform: scale(1.05);
      cursor: pointer;
    }
  
    .taxt-toggle {
      flex-shrink: 0;
      margin-left: auto;
      padding: 6px 12px;
      border-radius: 12px;
      border: 1px solid #333;
      background-color: #f8f8f8;
      white-space: nowrap;
    }
  
    @media (max-width: 768px) {
      .taxt-toggle {
        position: static;
        margin-left: auto;
        font-size: 0.8rem;
        padding: 5px 8px;
      }
    }
  
    @media (max-width: 480px) {
      .filter span {
        font-size: 0.75rem;
      }
  
      .filter i {
        font-size: 1.1rem;
      }
  
      .filters {
        padding: 10px 12px;
        gap: 1rem;
      }
    }
  </style>
  
  

<div class="filters">
    <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <span>Trending</span>
    </div>
    <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <span>Rooms</span>
    </div>
    <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <span>Iconic cities</span>
    </div>
    <div class="filter">
        <i class="fa-solid fa-mountain-sun"></i>
        <span>Mountain</span>
    </div>
    <div class="filter">
        <i class="fa-solid fa-umbrella-beach"></i>
        <span>Beach</span>
    </div>
    <div class="filter">
        <i class="fa-solid fa-chess-rook"></i>
        <span>Castles</span>
    </div>
    <div class="filter">
        <i class="fa-solid fa-tree"></i>
        <span>Camping</span>
    </div>
    <div class="filter">
        <i class="fa-solid fa-tractor"></i>
        <span>Farms</span>
    </div>
    <div class="taxt-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Show GST</label>
        </div>
    </div>
</div>
<div class="card-con">
   <div class="c-card">
    <% for( let i = 0; i < data.length; i++ ) { %>
        <!-- <a href=""> -->
            <div class="card" style="width: 18rem;">
                <img src="<%= data[i].image.url%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <a href="/listings/<%= data[i]._id%>" ><%= data[i].title %></a>
                  <p class="card-text">Price : <%= data[i].price%>  <i class="hidden-class" id="ss">+18% GST</i></p>
                  <p class="card-text"> Location : <%= data[i].location%></p>
                  <p class="card-text">Contary : <%= data[i].country%></p>
                </div>
            </div>
        <!-- </a> -->
    <% } %>
   </div>
</div>

<script>
    let switchCheckDefault=document.querySelector('#switchCheckDefault')
    switchCheckDefault.addEventListener('click',(e)=>{
        let i=document.querySelectorAll('#ss')
           i.forEach(e=>{
            e.classList.toggle('hidden-class')
           })
    })
</script>
